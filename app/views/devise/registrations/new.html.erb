<body class="text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "signin" } ) do |f| %>
    <img class="mb-4" src="/images/logo.png" alt="" width="170">
    <h1 class="h3 mb-3 font-weight-normal">Please sign up </h1>

  <% if resource.errors.full_messages.any? %>
    <div class="alert alert-danger">
      <%= resource.errors.full_messages.first %>
      <a href="#" class="close" data-dismiss="alert">&#215;</a>
    </div>
  <% end %>
    <div class="field">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "User Name (2-12 characters)" %>
    </div>
    <p class="signin--warning"> WriteRoom recommends using a completely anonymous, made-up name. Just a suggestion! </p>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password (minimum 6 characters)" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <h4> (or <a href='/users/sign_in'> sign in </a>)</h4>
  <p class="mt-5 mb-3 text-muted">&copy; WriteRoom 2019</p>
</body>
