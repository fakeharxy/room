<body class="text-center">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => { :class => "signin" } ) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <img class="mb-4" src="/images/logo.png" alt="" width="170">
    <h1 class="h3 mb-3 font-weight-normal">Please Sign Up</h1>

    <div class="field">
      <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control", placeholder: "User Name" %>
    </div>
    <div class="field">
      <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
    </div>
    <div class="field">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm Password" %>
    </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-lg btn-primary btn-block" %>
  </div>
<% end %>
<p class="mt-5 mb-3 text-muted">&copy; WriteRoom 2019</p>
</body>
