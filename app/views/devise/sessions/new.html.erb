<body class="text-center">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => "signin" } ) do |f| %>
    <img class="mb-4" src="/images/logo.png" alt="" width="170">
    <h1 class="h3 mb-3 font-weight-normal">Please sign in or <a href="/users/sign_up">sign up</a></h1>
    <div class="field">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email Address" %>
    </div>
    <div class="field">
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control", placeholder: "Password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="actions">
      <%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block" %>
    </div>
  <% end %>
  <p class="mt-5 mb-3 text-muted">&copy; WriteRoom 2019</p>
</body>
